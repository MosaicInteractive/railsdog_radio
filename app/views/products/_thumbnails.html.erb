<% if product.images.size > 1 %>
  <ul id="product-thumbnails" class="thumbnails">
    <% product.images.each do |i| %>
      <li><%= link_to(image_tag(i.attachment.url(:mini)), i.attachment.url(:original), 'data-product-image' => i.attachment.url(:product), :rel => 'product_images') %></li>
    <% end %>
  </ul>
<% end %>
