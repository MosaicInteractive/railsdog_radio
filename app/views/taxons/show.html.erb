<% @body_id = 'product-list' %>

<% content_for :banner do %>
  <h1><%= @taxon.name %></h1>
  <%= image_tag 'dogradio/taxon/satellite-radios-bg.jpg' %>
<% end %>

<% content_for :sidebar do %>
  <%= render 'shared/all_products' %>
<% end %>

<div id="products" role="products">

  <% if @taxon.children.empty? || !params[:keywords].blank? %>
    <%= render :partial => "shared/products", :locals => {:products => @products, :taxon => @taxon } %>
  <% else %>
    <p class="breadcrumbs"><%= link_to 'Products', products_path %> &raquo; <%= @taxon.name %></p>
    <%= render :partial => "shared/products", :locals => {:products => taxon_preview(@taxon), :taxon => @taxon} %>
  <% end %>

</div>
